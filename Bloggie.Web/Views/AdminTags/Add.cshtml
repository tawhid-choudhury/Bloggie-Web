@model Bloggie.Web.Models.ViewModels.AddTagRequest
@{
}
<div class="bg-secondary bg-opacity-10 py-2">
	<div class="container">
		<h1 class="">Add New Tag - Admin Functionality</h1>
	</div>
</div>

<div class="container py-5">
	<form method="post">
		<div class="mb-3">
			<label class="form-label">Name</label>
			<input class="form-control"
				   id="name"
				   required
				   type="text"
				   asp-for="Name" />
			<span class="text-danger" asp-validation-for="Name"></span>
		</div>

		<div class="mb-3">
			<label class="form-label">Display Name</label>
			<input class="form-control"
				   id="displayName"
				   required
				   type="text"
				   asp-for="DisplayName" />
			<span class="text-danger" asp-validation-for="DisplayName"></span>
		</div>

		<div class="mb-3">
			<button type="submit" class="btn btn-dark">Add Tag</button>
		</div>
	</form>
</div>