@model List<Bloggie.Web.Models.Domain.Tag>


@{
	int nextPage = Convert.ToInt32(ViewBag.PageNumber) + 1;
	int previousPage = Convert.ToInt32(ViewBag.PageNumber) - 1;

}

<div class="bg-secondary bg-opacity-10 py-2">
	<div class="container">
		<h1 class="">All Tags - Admin Functionality</h1>
	</div>
</div>

@* search box *@
<div class="container py-3">
	<div class="row">
		<form method="get"
			  asp-controller="AdminTags"
			  asp-action="List"
			  @* asp-route-searchQuery="" *@
		>
			<div class="col col-md-3 d-flex">
				<input value="@ViewBag.SearchQuery" type="text" name="searchQuery" class="form-control" placeholder="Search Tags..." />
				<button type="submit" class="btn btn-primary">Search</button>
			</div>
		</form>
	</div>



</div>
<div class="container my-5">
	@if (Model != null && Model.Any())
	{
		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Display Name</th>
					<th>Actions</th>

				</tr>
			</thead>
			<tbody>
				@foreach (var tag in Model)
				{
					<tr>
						<td>@tag.Id</td>
						<td>@tag.Name</td>
						<td>@tag.DisplayName</td>
						<td>
							<a asp-area=""
							   asp-controller="AdminTags"
							   asp-action="Edit"
							   asp-route-id="@tag.Id">
								Edit
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>

		<nav aria-label="Page navigation example">
			<ul class="pagination">
				<li class="page-item">
					<a class="page-link"
					   asp-controller="AdminTags"
					   asp-action="List"
					   asp-route-pageNumber="@previousPage"
					   asp-route-pageSize="@ViewBag.PageSize">
						Previous
					</a>
				</li>
				@for (int i = 1; i <= ViewBag.TotalPages; i++)
				{

					<li class="page-item">
						<a class="page-link"
						   asp-controller="AdminTags"
						   asp-action="List"
						   asp-route-pageNumber="@i"
						   asp-route-pageSize="@ViewBag.PageSize">
							@i
						</a>
					</li>
				}

				<li class="page-item">
					<a class="page-link"
					   asp-controller="AdminTags"
					   asp-action="List"
					   asp-route-pageNumber="@nextPage"
					   asp-route-pageSize="@ViewBag.PageSize">
						Next
					</a>
				</li>
			</ul>
		</nav>
	}
	else
	{
		<p>
			No Tags Found!
		</p>
	}
</div>
