@model List<Bloggie.Web.Models.Domain.BlogPost>
@{
}
<div class="bg-secondary bg-opacity-10 py-2">
	<div class="container">
		<h1 class="">All Blog Posts - Admin Functionality</h1>
	</div>
</div>

<div class="container py-5">
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Heading</th>
				<th>Tags</th>
				<th>Action</th>

			</tr>
		</thead>
		<tbody>
			@foreach (var bp in Model)
			{
				<tr>
					<td>@bp.Id</td>
					<td>@bp.Heading</td>
					<td>
						@foreach (var tag in bp.Tags)
						{
							<span class="badge bg-secondary">@tag.Name</span>
					}
					</td>
					<td>
						<a class="btn btn-primary"
						   asp-area=""
						   asp-controller="AdminBlogPosts"
						   asp-action="Edit"
						   asp-route-id="@bp.Id">
							Edit
						</a>
				</tr>
			}
	</table>
</div>
